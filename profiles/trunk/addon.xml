<?xml version="1.0" ?>
<AddOn xmlns="http://umlfri.org/xmlschema/addon.xsd">
    <Identity uri="urn:umlfri.org:metamodel:uml" />
    <Identity uri="http://umlfri.kst.fri.uniza.sk/metamodel/uml.frim" /> <!-- Only for compatibility with old save files -->
    
    <FriendlyName name="UML 1.4" version="0.1" />
    <Author>
        <Name name="UML .FRI team" />
        <Homepage url="http://umlfri.org" />
        
        <CommonLicense name="GPL-2" />
    </Author>
    
    <Icon path="icons/uml_icon.png" />
    <Description>
        Unified Modeling Language (UML) is a standardized general-purpose
        modeling language in the field of software engineering.
        
        UML includes a set of graphical notation techniques to create
        abstract models of specific systems.
    </Description>

    <Dependencies>
        <AddOn uri="urn:umlfri.org:starters:python" />
    </Dependencies>
    
    <Composite>
        <Metamodel>
            <Path path="metamodel" />
            
            <Template path="templates/empty.fritx" name="Empty UML diagram" />
            <Template path="templates/diagrams.fritx" name="Simple UML template" />
        </Metamodel>
        <Plugin>
            <Code os="all" language="pythonNew" path="plugin" />
        </Plugin>
    </Composite>
</AddOn>
