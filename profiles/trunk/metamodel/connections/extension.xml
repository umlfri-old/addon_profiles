<ConnectionType xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd" id="Extension">
    <Icon path="icons/generalize.png"/>
    <Domain id="extension" identity="name"/>
    
    <Appearance>
        <ConnectionLine style="solid" color="#cfg.Styles.Connection.LineColor"/>
        <ConnectionArrow index="-1" style="triangle_arrow" fill="#cfg.Styles.Connection.ArrowColor" color="#cfg.Styles.Connection.ArrowColor"/>
        
        <Label position="source">
            <Condition condition="#self.required">
                <Align align="center">
                    <Rectangle fill="#cfg.Styles.Connection.TextFill">
                        <VBox>
                            <TextBox text="&#171;" font="#cfg.Styles.Connection.TextFont" color="#cfg.Styles.Connection.TextColor"/>
                            <TextBox text="{required}" font="#cfg.Styles.Connection.TextFont" color="#cfg.Styles.Connection.TextColor"/>
                            <TextBox text="&#187;" font="#cfg.Styles.Connection.TextFont" color="#cfg.Styles.Connection.TextColor"/>
                        </VBox>
                    </Rectangle>
                </Align>
            </Condition>
        </Label>
    </Appearance>
</ConnectionType>